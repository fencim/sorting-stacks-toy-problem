{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions/"
  },
  "hosting": {
    "site": "sorting-stacks-toy",
    "public": "dist/pwa",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "**",
        "function": "restapi"
      }
    ]
  }
}
